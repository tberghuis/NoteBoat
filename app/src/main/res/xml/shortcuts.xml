<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <capability android:name="actions.intent.OPEN_APP_FEATURE">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="xyz.tberghuis.noteboat.MainActivity"
            android:targetPackage="site.thomasberghuis.noteboat">

            
            <!-- understand better android:name , it is defined as a BII -->
            <parameter
                android:name="feature"
                android:key="feature" />
        </intent>
    </capability>

    <shortcut
        android:shortcutId="new_voice_note"
        android:shortcutShortLabel="@string/shortcut_short_label">
        <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
            <!-- "open new voice note in note boat" -->
            <!-- "open note boat new voice note" -->
            <parameter-binding
                android:key="feature"
                android:value="new voice note" />
        </capability-binding>
    </shortcut>
</shortcuts>